/* pages/detail/detail.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #dddddd;
  padding-bottom: 120rpx;
}

.swiper-container{
  position: relative;
  width: 100%;
  height: auto;
}

.swiper{
  width: 100%;
  height: 400rpx;
}
.swiper image{
  width: 100%;
  height: 400rpx;
}

.swiper-recommend{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(51, 51, 51, 0.5);
  color: #ffffff;
  padding: 10rpx;
}

.swiper-recommend span{
  height: 12px;
  font-size: 12px;
  line-height: 12px;
}

.house-detail{
  width: 100%;
  background-color: #ffffff;
}
.house-detail-con{
  margin: 15rpx 30rpx;
}
.detail-con-top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.title{
  display: flex;
  height: 18px;
  line-height: 18px;
}

.title i{
  width: 2px;
  height: 18px;
  background-color: #b51b14;
}
.title span{
  font-size: 18px;
  margin-left: 10rpx;
}

.online-subscription{
  display: flex;
  align-items: center;
  background-color: orange;
  padding: 5rpx 15rpx;
  border-radius: 5rpx;
}
.online-subscription span{
  color: #ffffff;
  font-size: 12px;
  margin-left: 10rpx;
}
.house-label{
  margin-top: 30rpx;
}
.house-label span{
  font-size: 12px;
  color: #333333;
  margin-right: 15rpx;
  background-color: #eeeeee;
  padding: 0 20rpx;
  border-radius: 10rpx;
}

.house-other-info{
  margin-top: 20rpx;
}
.info .key{
  color: #9d9d9d;
}
.info .value{
  color: #b51b14;
}

.price{
  font-size: 16px;
}
.phone{
  font-size: 16px;
}


.get-phone{
  background-color: #FFCCCC;
  display: flex;
  justify-content:center;
  color: #b51b14;
  padding: 10rpx 0;
  margin-top: 30rpx;
}

.get-phone span{
  margin-left: 10rpx;
}

.VRshowHouse{
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}

.VRshowHouse-con{
  margin: 15rpx 30rpx;
}
.VRshowHouse-con image{
  margin-top: 30rpx;
  width: 200rpx;
  height: 200rpx;
}


.dynamic{
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}

.dynamic-con{
  margin: 15rpx 30rpx;
}
.dynamic-con-top{
  display: flex;
  justify-content: space-between;
}

.more{
  display: flex;
  align-items: center;
}
.more span{
  color: #b51b14;
}
.dynamic-con-con{
  margin-top: 20rpx;
  font-size: 16px;
}

.floorPlan{
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}
.floorPlan-con{
  margin: 15rpx 30rpx;
}
.spu-container{
  margin-right: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.inner{
  display: flex;
  flex-direction: row;
}
.scroll-view{
  margin-top: 28rpx;
}
.spu-img{
  width: 160rpx;
  height: 160rpx;
}

.supporting{
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}
.supporting-con{
  margin: 15rpx 30rpx;
}
.supporting-con-con{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.supporting-item{
  margin-top: 20rpx;
}

.propertyInfo{
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}
.propertyInfo-con{
  margin: 15rpx 30rpx;
}

.propertyInfo-con-item{
  margin-top: 30rpx;
}
.propertyInfo-label{
  width: 240rpx;
}

.detail-bottom{
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
}

.detail-bottom-left{
  display: flex;
  align-items: center;
}
.detail-bottom-left view{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  justify-content: center;
  text-align: center;
}
.detail-bottom-left view span{
  font-size: 16px;
}

.detail-bottom-right{
  display: flex;
  flex: 1;
}
.detail-bottom-right view{
  display: flex;
  flex: 1;
  font-size: 20px;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}
.bottom-subscribe{
  background-color: orange;
}
.bottom-reservation{
  background-color: #b51b14;
}
