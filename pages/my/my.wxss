/* pages/my/my.wxss */
page{
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #dddddd;
}

.userinformation{
  padding: 20rpx 0;
  background-color: #ffffff;
}
.avatar-container {
  margin-left: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
}

.information1{
  margin-top: 20rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}
.reservation{
  display: flex;
  flex-direction: column;
}
.reservation-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
}
.item-left{
  display: flex;
}
.item-left span{
  margin-left: 20rpx;
}
